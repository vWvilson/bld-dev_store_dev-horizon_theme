{%- style -%}
  .two-column-content-section {
    margin-top: {{ section.settings.margin_top }};
    margin-bottom: {{ section.settings.margin_bottom }};
    padding: {{ section.settings.section_padding }};
    background-color: {{ section.settings.background_color }};
  }
  .two-column-content__inner {
    max-width: 100%;
  }
  .two-column-content__grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: {{ section.settings.column_gap }}px;
    align-items: {{ section.settings.vertical_alignment }};
  }
  .two-column-content__column {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }
  .two-column-content__headline {
    margin: 0;
    font-size: clamp(28px, 4vw, 48px);
    line-height: 1.1;
  }
  .two-column-content__text {
    color: rgba(17, 17, 17, 0.75);
  }
  .two-column-content__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.85rem 1.75rem;
    border: 1px solid transparent;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.85rem;
    transition: background-color 0.3s ease
    , color 0.3s ease
    , border-color 0.3s ease;
  }
  .two-column-content__button.btn--primary {
    background-color: {{ section.settings.primary_button_bg }};
    color: {{ section.settings.primary_button_text }};
    border-color: {{ section.settings.primary_button_bg }};
  }
  .two-column-content__button.btn--primary:hover {
    opacity: 0.85;
  }
  .two-column-content__button.btn--secondary {
    background-color: transparent;
    color: {{ section.settings.secondary_button_text }};
    border-color: {{ section.settings.secondary_button_text }};
  }
  .two-column-content__button.btn--secondary:hover {
    background-color: {{ section.settings.secondary_button_text }};
    color: #ffffff;
  }
  .two-column-content__image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.image_radius }}px;
  }
  .two-column-content__image-placeholder {
    background-color: rgba(17, 17, 17, 0.05);
    border: 1px dashed rgba(17, 17, 17, 0.2);
    border-radius: {{ section.settings.image_radius }}px;
    padding: 3rem 1rem;
    text-align: center;
    color: rgba(17, 17, 17, 0.6);
  }
  @media (max-width: 989px) {
    .two-column-content__grid {
      grid-template-columns: 1fr;
    }
    .two-column-content__column {
      gap: 1rem;
    }
  }
{%- endstyle -%}

<section class="two-column-content-section" data-section-id="{{ section.id }}">
  <div class="two-column-content__inner{% if section.settings.section_width == 'page' %} container{% endif %}">
    <div class="two-column-content__grid">
      {%- assign columns = 'left,right' | split: ',' -%}
      {%- for column in columns -%}
        <div class="two-column-content__column two-column-content__column--{{ column }}">
          {%- assign has_blocks = false -%}
          {%- for block in section.blocks -%}
            {%- if block.settings.column == column -%}
              {%- assign has_blocks = true -%}
              {%- case block.type -%}
                {%- when 'headline' -%}
                  {%- if block.settings.headline != blank -%}
                    <h2
                      class="two-column-content__headline"
                      style="text-align: {{ block.settings.text_alignment }};"
                      {{ block.shopify_attributes }}>
                      {{ block.settings.headline }}
                    </h2>
                  {%- endif -%}
                {%- when 'text' -%}
                  {%- if block.settings.body != blank -%}
                    <div
                      class="two-column-content__text rte"
                      style="text-align: {{ block.settings.text_alignment }};"
                      {{ block.shopify_attributes }}>
                      {{ block.settings.body }}
                    </div>
                  {%- endif -%}
                {%- when 'button' -%}
                  {%- if block.settings.label != blank -%}
                    <div style="text-align: {{ block.settings.text_alignment }};" {{ block.shopify_attributes }}>
                      <a
                        class="two-column-content__button btn--{{ block.settings.button_style }}"
                        href="{{ block.settings.link | default: '#' }}"
                        target="{% if block.settings.open_in_new_tab %}_blank{% else %}_self{% endif %}"
                        {% if block.settings.open_in_new_tab %}
                        rel="noopener noreferrer"
                        {% endif %}>
                        {{ block.settings.label }}
                      </a>
                    </div>
                  {%- endif -%}
                {%- when 'image' -%}
                  <div class="two-column-content__image" {{ block.shopify_attributes }}>
                    {%- if block.settings.image != blank -%}
                      <img
                        src="{{ block.settings.image | image_url: width: block.settings.image_width }}"
                        alt="{{ block.settings.alt_text | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image_width }}">
                    {%- else -%}
                      <div class="two-column-content__image-placeholder">
                        {{ 'sections.collection-general.image_placeholder' | t }}
                      </div>
                    {%- endif -%}
                  </div>
              {%- endcase -%}
            {%- endif -%}
          {%- endfor -%}
          {%- unless has_blocks -%}
            <div class="two-column-content__text" style="text-align: center; color: rgba(17, 17, 17, 0.6);">
              {{ 'sections.collection-template.empty' | t }}
            </div>
          {%- endunless -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

