{%- style -%}
  .flexible-section {
    margin-top: {{ section.settings.margin_top }};
    margin-bottom: {{ section.settings.margin_bottom }};
    padding: {{ section.settings.padding }};
    {% if section.settings.background_color != blank and section.settings.background_color != 'rgba(0,0,0,0)' %}
    background-color: {{ section.settings.background_color }};
    {% endif %}
  }
  .flexible-section .section-title {
    text-align: {{ section.settings.title_align }};
    margin-bottom: 30px;
  }
  .flexible-section .section-title h2 {
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    margin: 0;
  }
  .flexible-section .block-item {
    margin-bottom: 20px;
  }
  .flexible-section .block-item:last-child {
    margin-bottom: 0;
  }
  .flexible-section .image-block img {
    width: 100%;
    height: auto;
    display: block;
  }
  .flexible-section .text-block {
    color: {{ section.settings.text_color | default: '#666666' }};
  }
  .flexible-section .button-block .btn {
    display: inline-block;
    padding: 12px 30px;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 14px;
    letter-spacing: 0.05em;
    transition: opacity 0.3s ease;
  }
  .flexible-section .button-block .btn:hover {
    opacity: 0.85;
  }
  .flexible-section .spacer-block {
    display: block;
  }
  .flexible-section .video-block {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
  }
  .flexible-section .video-block iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .flexible-section .collection-block .products {
    display: flex;
    flex-wrap: wrap;
    margin: -10px;
  }
  .flexible-section .collection-block .product-col {
    padding: 10px;
  }
  .flexible-section .collection-banner {
    display: flex;
    align-items: center;
    gap: 40px;
    flex-wrap: wrap;
  }
  .flexible-section .collection-banner.reverse {
    flex-direction: row-reverse;
  }
  .flexible-section .collection-banner .banner-content {
    flex: 1;
    min-width: 280px;
  }
  .flexible-section .collection-banner .banner-image {
    flex: 1;
    min-width: 280px;
  }
  .flexible-section .collection-banner .banner-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  .flexible-section .collection-banner .banner-title {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 15px 0;
    line-height: 1.2;
  }
  .flexible-section .collection-banner .banner-description {
    margin: 0 0 25px 0;
    line-height: 1.6;
  }
  .flexible-section .collection-banner .banner-link {
    display: inline-block;
    padding: 12px 30px;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 14px;
    letter-spacing: 0.05em;
    transition: opacity 0.3s ease;
  }
  .flexible-section .collection-banner .banner-link:hover {
    opacity: 0.85;
  }
  @media screen and (max-width: 768px) {
    .flexible-section .collection-banner {
      flex-direction: column;
    }
    .flexible-section .collection-banner.reverse {
      flex-direction: column;
    }
    .flexible-section .collection-banner .banner-title {
      font-size: 24px;
    }
  }
{%- endstyle -%}

<section class="flexible-section" data-section-id="{{ section.id }}">
  <div class="{% if section.settings.full_width %}container-fluid{% else %}container{% endif %}">
    
    {%- if section.settings.title != blank -%}
      <div class="section-title">
        <h2>{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    {%- for block in section.blocks -%}
      <div class="block-item block-{{ block.type }}" {{ block.shopify_attributes }}>
        
        {%- case block.type -%}

          {%- when 'rich_text' -%}
            <div class="text-block" style="text-align: {{ block.settings.text_align }};">
              {%- if block.settings.heading != blank -%}
                <h3 style="color: {{ block.settings.heading_color }}; font-size: {{ block.settings.heading_size }}px;">{{ block.settings.heading }}</h3>
              {%- endif -%}
              <div class="rte">{{ block.settings.text }}</div>
            </div>

          {%- when 'image' -%}
            <div class="image-block" style="text-align: {{ block.settings.image_align }};">
              {%- if block.settings.link != blank -%}
                <a href="{{ block.settings.link }}">
              {%- endif -%}
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: block.settings.image_width }}"
                  alt="{{ block.settings.image.alt | default: 'Image' }}"
                  loading="lazy"
                  style="{% if block.settings.image_width != blank %}max-width: {{ block.settings.image_width }}px;{% endif %}"
                >
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {%- endif -%}
              {%- if block.settings.link != blank -%}
                </a>
              {%- endif -%}
            </div>

          {%- when 'html' -%}
            <div class="html-block">
              {% include 'shortcode' load: block.settings.html %}
            </div>

          {%- when 'liquid' -%}
            <div class="liquid-block">
              {{ block.settings.liquid }}
            </div>

          {%- when 'button' -%}
            <div class="button-block" style="text-align: {{ block.settings.button_align }};">
              <a 
                href="{{ block.settings.button_link }}" 
                class="btn"
                style="background-color: {{ block.settings.button_bg_color }}; color: {{ block.settings.button_text_color }}; border: 1px solid {{ block.settings.button_border_color }};"
              >
                {{ block.settings.button_text }}
              </a>
            </div>

          {%- when 'spacer' -%}
            <div class="spacer-block" style="height: {{ block.settings.height }}px;"></div>

          {%- when 'video' -%}
            <div class="video-block">
              {%- if block.settings.video_url contains 'youtube' -%}
                {%- assign video_id = block.settings.video_url | split: 'v=' | last | split: '&' | first -%}
                <iframe src="https://www.youtube.com/embed/{{ video_id }}" frameborder="0" allowfullscreen></iframe>
              {%- elsif block.settings.video_url contains 'youtu.be' -%}
                {%- assign video_id = block.settings.video_url | split: '/' | last | split: '?' | first -%}
                <iframe src="https://www.youtube.com/embed/{{ video_id }}" frameborder="0" allowfullscreen></iframe>
              {%- elsif block.settings.video_url contains 'vimeo' -%}
                {%- assign video_id = block.settings.video_url | split: '/' | last -%}
                <iframe src="https://player.vimeo.com/video/{{ video_id }}" frameborder="0" allowfullscreen></iframe>
              {%- endif -%}
            </div>

          {%- when 'collection' -%}
            {%- if block.settings.collection != blank -%}
              <div class="collection-block">
                {%- if block.settings.show_title -%}
                  <h3 style="margin-bottom: 20px;">{{ block.settings.collection.title }}</h3>
                {%- endif -%}
                <div class="products row">
                  {%- for product in block.settings.collection.products limit: block.settings.limit -%}
                    <div class="product-col col-6 col-md-{{ 12 | divided_by: block.settings.columns }}">
                      <a href="{{ product.url }}">
                        <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.title }}" loading="lazy">
                        <h4 style="margin-top: 10px; font-size: 14px;">{{ product.title }}</h4>
                        <span class="price">{{ product.price | money }}</span>
                      </a>
                    </div>
                  {%- endfor -%}
                </div>
                {%- if block.settings.show_view_all -%}
                  <div style="text-align: center; margin-top: 20px;">
                    <a href="{{ block.settings.collection.url }}" class="btn" style="background-color: #0078a9; color: #fff;">View All</a>
                  </div>
                {%- endif -%}
              </div>
            {%- endif -%}

          {%- when 'collection_banner' -%}
            {%- if block.settings.collection != blank -%}
              <div class="collection-banner{% if block.settings.reverse_layout %} reverse{% endif %}" style="{% if block.settings.background_color != blank %}background-color: {{ block.settings.background_color }};{% endif %} padding: {{ block.settings.padding }};">
                <div class="banner-content">
                  <h3 class="banner-title" style="color: {{ block.settings.title_color }};">{{ block.settings.collection.title }}</h3>
                  {%- if block.settings.description != blank -%}
                    <p class="banner-description" style="color: {{ block.settings.text_color }};">{{ block.settings.description }}</p>
                  {%- elsif block.settings.collection.description != blank -%}
                    <p class="banner-description" style="color: {{ block.settings.text_color }};">{{ block.settings.collection.description | strip_html | truncate: 150 }}</p>
                  {%- endif -%}
                  <a href="{{ block.settings.collection.url }}" class="banner-link" style="background-color: {{ block.settings.button_bg_color }}; color: {{ block.settings.button_text_color }};">
                    {{ block.settings.button_text | default: 'Shop Now' }}
                  </a>
                </div>
                <div class="banner-image">
                  {%- if block.settings.image != blank -%}
                    <img
                      src="{{ block.settings.image | image_url: width: 800 }}"
                      srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                              {{ block.settings.image | image_url: width: 600 }} 600w,
                              {{ block.settings.image | image_url: width: 800 }} 800w"
                      sizes="(max-width: 768px) 100vw, 50vw"
                      alt="{{ block.settings.collection.title }}"
                      loading="lazy"
                    >
                  {%- elsif block.settings.collection.image != blank -%}
                    <img
                      src="{{ block.settings.collection.image | image_url: width: 800 }}"
                      alt="{{ block.settings.collection.title }}"
                      loading="lazy"
                    >
                  {%- else -%}
                    {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}

          {%- when 'divider' -%}
            <hr style="border: none; border-top: {{ block.settings.thickness }}px {{ block.settings.style }} {{ block.settings.color }}; margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;">

          {%- when 'heading' -%}
            <{{ block.settings.heading_tag }} 
              style="text-align: {{ block.settings.text_align }}; color: {{ block.settings.color }}; font-size: {{ block.settings.font_size }}px; margin: 0;"
            >
              {{ block.settings.heading }}
            </{{ block.settings.heading_tag }}>

        {%- endcase -%}

      </div>
    {%- endfor -%}

  </div>
</section>

