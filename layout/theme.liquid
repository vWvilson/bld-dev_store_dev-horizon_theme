<head>
  <!-- Basic page needs ================================================== -->
  <meta charset="utf-8">
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}" type="image/png" />
  {%- if template contains 'index' -%}
  {%- if page_title != blank and page_title != 'Welcome' -%}
